{
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "scripts": {
    "server": "npm run start --prefix backend",
    "client": "npm run start --prefix frontend",
    "server-dependencies": "npm run install --prefix backend",
    "client-dependencies": "npm run install --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "setup": "concurrently \"npm run server-dependencies\" \"npm run client-dependencies\""
  }
}
